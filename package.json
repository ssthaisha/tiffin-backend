{
  "name": "tiffin-backend",
  "version": "1.0.0",
  "description": "backend of MERN tiffin",
  "main": "index.js",
  "scripts": {
    "preinstall": "npm i -g nodemon eslint mocha rimraf npm-run-all npm-check pm2",
    "start": "pm2 start dist/index.js --name tiffin-backend && pm2 logs all",
    "postinstall": "npm-run-all build",
    "start:simple": "nodemon src/index.js --exec babel-node --presets es2015,stage-2",
    "start:dev": "npm-run-all -s clean -p watch:*",
    "start:debug": "npm-run-all -s clean -p debug",
    "start:prod": "npm-run-all -s clean lint build serve",
    "clean": "npm-run-all -p clean:*",
    "clean:dist": "rimraf dist",
    "clean:cov": "rimraf coverage",
    "debug": "babel-node-debug",
    "watch:node": "nodemon src/index --exec babel-node --presets es2015,stage-2 --delay 2.5",
    "build": "npm-run-all -s build:babel",
    "build:babel": "./node_modules/.bin/babel src -d dist",
    "lint": "eslint *.js src/*.js src/**/*.js",
    "test": "npm-run-all -s test:cov",
    "test:api": "NODE_ENV=test || SET \"NODE_ENV=test\" mocha --require babel-register src/**/*.api.spec.js -R spec --bail",
    "test:unit": "mocha --timeout 15000 --require babel-register src/**/*.unit.spec.js -R spec --bail",
    "test:cov": "NODE_ENV=test || SET \"NODE_ENV=test\" babel-istanbul cover node_modules/mocha/bin/_mocha -- src/**/*unit.spec.js -R spec --bail",
    "test-watch": "nodemon --exec \"npm run test:unit\"",
    "startt": "node backend/server",
    "server": "nodemon dist/index",
    "dev": "concurrently \"npm run server \" \"npm run client\"",
    "data:import": "node seeder",
    "data:destroy": "node seeder -d"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.24.0",
    "babel-eslint": "^7.1.1",
    "babel-istanbul": "^0.12.2",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-stage-2": "^6.22.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.5.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-formidable": "^1.2.0",
    "formidable": "^1.2.2",
    "helmet": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.4",
    "mongoose": "^5.10.17",
    "multer": "^1.4.2",
    "nodemailer": "^6.8.0",
    "socket.io": "^4.5.3",
    "socket.io-client": "^2.1.1"
  },
  "devDependencies": {
    "babel-plugin-transform-runtime": "^6.23.0",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6"
  }
}
